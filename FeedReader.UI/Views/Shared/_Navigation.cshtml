@model IEnumerable<FeedReader.UI.Models.MenuItems>
<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
            <li class="nav-header">
                <div class="dropdown profile-element">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                        + Add A New Feed
                    </button>
                    <ul class="dropdown-menu animated fadeInRight m-t-xs" style="position: absolute; top: 91px; left: 0px; will-change: top, left;">
                        <li><a class="dropdown-item" href="#">Logout</a></li>
                    </ul>
                </div>
                <div class="logo-element">
                    FR
                </div>
            </li>

            <li class="@Html.IsSelected(controller: "Home")">
                <a href="#"><i class="fa fa-feed"></i> <span class="nav-label" data-i18n="nav.tables">Feeds</span><span class="fa arrow"></span></a>
                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Tables", cssClass: "in")">
                    @if (Model != null)
                    {
                        <li class="@Html.IsSelected(action: "index")"><a href="@Url.Action("index", "Home",new { url = "all" })">All</a></li>
                        foreach (var item in Model)
                        {
                            <li class="@Html.IsSelected(action: "index")"><a href="@Url.Action("index", "Home",new { url = @item.ID })">@item.LinkName</a></li>
                        }
                    }
                </ul>
            </li>
        </ul>
    </div>
</nav>